    <!-- sidebar -->
    <div id="main-sidebar-container" class="collapse width pull-right">
      
      <nav id="sidebar">
        <div class="sidebar-header text-center align-middle">
            <h3><%= attr.user %></h3>
        </div>

        <ul class="list-unstyled components">
        <% for (category of categories) { %>
          <li><a href="/<%= category.uri %>"><%= category.name %></a></li>
        <% } %>
          <li><a href="/destaque">Destaques</a></li>
        </ul>

        <ul class="list-unstyled CTAs">
            <li>
                <a href="/carrinho" class="download">Meu Carrinho</a>
            </li>
            <li>
                <a href="/pedidos" class="article user-hash">Meus Pedidos</a>
            </li>
        </ul>

        <div class="fixed-bottom pl-3 mb-2">
          <a href="<%- attr.business.link; %>" target="_blank" >Gestor Virtual (Seu APP)</a>
        </div>
    </nav>

    </div>

    <header class="fixed-top d-block d-lg-none">
      <div class="d-flex justify-content-between">
        <span class="btn pt-3" style="font-size: 1.4em;"><%= attr.user %></span>
        <span class="btn fas fa-bars pt-3" style="font-size: 1.8em;" data-toggle="collapse" data-target="#main-sidebar-container" aria-controls="main-sidebar-container" aria-expanded="false"></span>
      </div>
    </header>

    <header class="fixed-top d-none d-lg-block pt-2">
